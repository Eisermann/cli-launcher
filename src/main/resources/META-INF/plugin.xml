<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
  <id>com.github.eisermann.opencode-launcher</id>

  <!-- Public plugin name should be written in Title Case.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
  <name>OpenCode Launcher</name>

  <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
  <vendor url="https://eisermann.github.io/">eisermann</vendor>

  <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
  <description><![CDATA[
        <blockquote><b>Important:</b> Install the OpenCode CLI separately before using this plugin.</blockquote>

        <blockquote><b>For Windows users:</b> Please select your terminal shell in the plugin settings (<em>Settings (→ Other Settings) → OpenCode Launcher</em>) to ensure proper functionality.</blockquote>

        <h2>Overview</h2>
        <p>
          OpenCode Launcher is an <b>unofficial</b> IntelliJ IDEA plugin that keeps the OpenCode CLI one click away inside the IDE.
        </p>

        <h2>Features</h2>
        <ul>
          <li><b>One-click launch</b> from the toolbar or Tools menu</li>
          <li><b>Integrated terminal</b> that opens a dedicated "OpenCode" tab in the project root</li>
          <li><b>Completion notifications</b> after OpenCode CLI finishes processing the current run</li>
          <li><b>Automatic file opening</b> for files updated by OpenCode</li>
          <li><b>Built-in MCP server pairing</b> with guided setup for IntelliJ's MCP server (2025.2+)</li>
          <li><b>Flexible configuration</b> for launch modes, models, and notifications</li>
        </ul>

        <h2>Usage</h2>
        <ol>
          <li>Click the <b>Launch OpenCode</b> button in the main toolbar</li>
          <li>Or choose <b>Tools</b> → <b>Launch OpenCode</b></li>
          <li>The integrated terminal opens a new "OpenCode" tab and runs <code>opencode</code> automatically</li>
        </ol>

        <h2>Configuration</h2>
        <p>Open <em>Settings (→ Other Settings) → OpenCode Launcher</em> to pick the launch mode, model, notification behavior, and auto-open options.</p>

        <h2>Requirements</h2>
        <ul>
          <li>IntelliJ IDEA 2024.2 or later (or other compatible JetBrains IDEs)</li>
          <li>OpenCode CLI installed and available in your system PATH</li>
        </ul>
    ]]></description>

  <!-- Product and plugin compatibility requirements.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
  <depends>com.intellij.modules.platform</depends>
  <depends>org.jetbrains.plugins.terminal</depends>

  <!-- Extension points defined by the plugin.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
  <extensions defaultExtensionNs="com.intellij">
    <notificationGroup id="OpenCodeLauncher" displayType="BALLOON" isLogByDefault="true"/>
    <applicationConfigurable instance="com.github.eisermann.opencodelauncher.settings.ui.OpenCodeLauncherConfigurable" id="com.github.eisermann.opencodelauncher.settings" displayName="OpenCode Launcher"/>
    <postStartupActivity implementation="com.github.eisermann.opencodelauncher.startup.OpenCodeStartupActivity"/>
    <fileEditorProvider implementation="com.github.eisermann.opencodelauncher.mcp.OpenCodeDiffFileEditorProvider"/>
  </extensions>

  <projectListeners>
    <listener class="com.github.eisermann.opencodelauncher.terminal.ProjectClosingListener"
              topic="com.intellij.openapi.project.ProjectManagerListener"/>
  </projectListeners>

  <actions>
    <action id="com.github.eisermann.opencodelauncher.launch"
      class="com.github.eisermann.opencodelauncher.actions.LaunchOpenCodeAction"
      text="Launch OpenCode" description="Open an OpenCode terminal" icon="icons/opencode.svg">
      <!-- Keyboard shortcut: Option+Cmd+P (macOS) or Alt+Ctrl+P (Windows/Linux) -->
      <keyboard-shortcut keymap="Mac OS X" first-keystroke="alt meta P"/>
      <keyboard-shortcut keymap="$default" first-keystroke="control alt P"/>
      <!-- New UI toolbar (2022.3+) -->
      <add-to-group group-id="MainToolbarRight" anchor="last"/>
      <add-to-group group-id="MainToolbarLeft" anchor="last"/>
      <!-- Fallback: old UI/NavBar toolbar -->
      <add-to-group group-id="NavBarToolBar" anchor="last"/>
      <!-- Also put it in the Tools menu for discoverability -->
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>
</idea-plugin>
